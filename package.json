{
	"name": "lualatex-py",
	"version": "1.0.0",
	"description": "LuaLaTeX wrapper that runs Python code if it exists in the file.",
	"license": "MIT",
	"repository": "leonzalion/lualatex-py",
	"author": {
		"name": "Leon Si",
		"email": "contact@leonzalion.com",
		"url": "https://leonzalion.com"
	},
	"bin": {
		"lualatex-py": "./lualatex-py.js"
	},
	"type": "module",
	"scripts": {
		"release": "lionp",
		"prepare": "lion-git-hooks",
		"start": "node-ts ./src/index.ts",
		"build": "node-ts ./scripts/build.ts",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "latest",
		"@types/is-absolute": "^1.0.0",
		"@types/jest": "^27.0.3",
		"@types/minimist": "^1.2.2",
		"@types/node": "^17.0.0",
		"eslint": "^8.5.0",
		"jest": "^27.4.5",
		"lint-staged": "^12.1.3",
		"lion-git-hooks": "^1.0.2",
		"lion-system": "latest",
		"lionp": "^1.0.17",
		"prettier": "^2.5.1",
		"ts-jest": "^27.1.2",
		"ts-jest-resolver": "^2.0.0",
		"tsc-alias": "^1.6.1",
		"typescript": "^4.5.4"
	},
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"lint-staged": {
		"*.{js,ts}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"dependencies": {
		"commander": "^9.0.0",
		"execa": "^6.1.0",
		"is-absolute": "^1.0.0"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
