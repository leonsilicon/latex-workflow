{
	"name": "latex-workflow",
	"version": "1.1.10",
	"description": "A custom LaTeX workflow for compiling LaTeX documents.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/leonzalion/latex-workflow.git"
	},
	"exports": "./index.js",
	"homepage": "https://github.com/leonzalion/latex-workflow#readme",
	"author": {
		"name": "Leon Si",
		"email": "contact@leonzalion.com",
		"url": "https://leonzalion.com"
	},
	"bin": {
		"latex-workflow": "./bin/latex-workflow.js"
	},
	"type": "module",
	"scripts": {
		"release": "lionp",
		"prepare": "lion-git-hooks",
		"start": "node-ts ./src/bin/latex-workflow.ts",
		"build": "node-ts ./scripts/build.ts",
		"test": "vitest run",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@leonzalion/configs": "^1.1.11",
		"@types/is-absolute": "^1.0.0",
		"@types/minimist": "^1.2.2",
		"@types/node": "^17.0.21",
		"@types/tmp": "^0.2.3",
		"desm": "^1.2.0",
		"eslint": "^8.11.0",
		"lint-staged": "^12.3.5",
		"lion-git-hooks": "^1.0.7",
		"lion-system": "^1.0.14",
		"lionp": "^1.0.23",
		"mock-argv": "^2.0.8",
		"prettier": "^2.5.1",
		"tsc-alias": "^1.6.4",
		"typescript": "^4.6.2",
		"vitest": "^0.6.1"
	},
	"prettier": "@leonzalion/configs/prettier.cjs",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint.cjs"
		]
	},
	"lint-staged": {
		"*.{js,ts}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"dependencies": {
		"commander": "^9.0.0",
		"decimal.js": "^10.3.1",
		"execa": "^6.1.0",
		"filenamify": "^5.1.0",
		"globby": "^13.1.1",
		"is-absolute": "^1.0.0",
		"jslatex": "^0.1.7",
		"nanoid": "^3.3.1",
		"sigfig": "^0.0.2",
		"tmp-promise": "^3.0.3"
	},
	"publishConfig": {
		"directory": "dist"
	}
}
